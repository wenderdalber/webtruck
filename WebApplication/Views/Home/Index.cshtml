@model List<WebApplication.Models.Entities.Trucks>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <a href="/home/addtruck" class="btn btn-sm btn-success">Add Truck</a>

    <h3>
        @TempData["Message"]
    </h3>

    @if (Model.Count > 0)
    {
        <table class="table table-bordered">
            <tr style="font-weight: bold;">
                <td>Year Model</td>
                <td>Year Manufacturing</td>
                <td>Model</td>
                <td>Actions</td>
            </tr>
            @foreach (var truck in Model)
            {
                <tr>
                    <td>@truck.YearModel</td>
                    <td>@truck.YearManufacturing</td>
                    <td>@truck.Model</td>
                    <td>
                        <a href="/home/edit?truck=@truck.ID" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/home/delete?truck=@truck.ID" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <h1 class="display-4">Any truck register</h1>
    }
</div>
